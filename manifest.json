{
  "manifest_version": 3,
  "name": "Yahoo Finance Favicon Colorizer",
  "description": "Change color of Yahoo Finance favicon based on day gain/loss.",
  "version": "0.1.0",
  "content_scripts": [
    {
      "js": ["scripts/main.js"],
      "matches": [
        "https://finance.yahoo.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}
